/**
 * Connect-4 Game - Board Module
 * Handles board initialization and display
 */

#ifndef CONNECT4_BOARD_H
#define CONNECT4_BOARD_H

#define ROWS 6
#define COLS 7
#define WIN_COUNT 4         // Number of pieces needed to win
#define BOARD_FULL 42       // Total cells (ROWS * COLS)

typedef enum {
	cell_empty = 0,
	cell_player1,
	cell_player2
} Cell;

extern Cell board[ROWS][COLS];

/**
 * Initialize the board to empty state
 * Sets all cells to cell_empty
 */
void board_init(void);

/**
 * Display the board with colors and formatting
 * Uses ANSI colors for piece display (Red for P1, Yellow for P2)
 */
void board_print(void);

#endif /* CONNECT4_BOARD_H */