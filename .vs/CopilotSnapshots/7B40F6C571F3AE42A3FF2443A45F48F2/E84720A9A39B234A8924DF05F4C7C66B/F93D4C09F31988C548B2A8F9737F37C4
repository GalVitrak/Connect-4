/**
 * Connect-4 Game - Main Entry Point
 * A two-player strategy game where players compete to get 4 pieces in a row
 * 
 * Features:
 * - Player vs Player mode
 * - Player vs Computer with 3 difficulty levels (Easy, Medium, Hard)
 * - Statistics tracking
 * - Colored ASCII board display
 * - Cross-platform support (Windows/Unix)
 */

#include "menu.h"
#include <stdlib.h>
#include <time.h>

int main(void) {
	// Initialize random seed for AI randomness
	srand((unsigned int)time(NULL));

	// Start the main menu loop
	menu_loop();
	
	return 0;
}