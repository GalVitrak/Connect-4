/**
 * Connect-4 Game - Statistics Module
 * Tracks game statistics and win/loss records
 */

#ifndef CONNECT4_STATS_H
#define CONNECT4_STATS_H

// Declare variables as extern (tells compiler they exist elsewhere)
extern int player_1_wins_vs_easy;
extern int player_1_wins_vs_medium;
extern int player_1_wins_vs_hard;
extern int player_1_wins_vs_player_2;
extern int player_2_wins_vs_player_1;
extern int pc_wins_easy;
extern int pc_wins_medium;
extern int pc_wins_hard;
extern int pvp_games;
extern int pve_games_easy;
extern int pve_games_medium;
extern int pve_games_hard;

// Function declarations
void player_1_win_easy(void);
void player_1_win_medium(void);
void player_1_win_hard(void);
void player_1_win_pvp(void);
void player_2_win_pvp(void);

void pc_win_easy(void);
void pc_win_medium(void);
void pc_win_hard(void);

void count_game_pvp(void);
void count_game_easy(void);
void count_game_medium(void);
void count_game_hard(void);

/**
 * Display all game statistics in formatted output
 * Shows wins/losses for all game modes
 */
void print_stats(void);

#endif /* CONNECT4_STATS_H */